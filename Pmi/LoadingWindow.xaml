<Window x:Class="Pmi.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pmi"
        mc:Ignorable="d"
        Title="Загрузка..." Height="120" Width="300" ResizeMode="NoResize">
    <Grid>
        <TextBlock Text="{Binding Status}" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="15"/>
        <ProgressBar Value="{Binding Progress}" Minimum="0" Maximum="500" HorizontalAlignment="Stretch" Background="SkyBlue" VerticalAlignment="Bottom" Margin="15" Height="20"/>
    </Grid>
</Window>
